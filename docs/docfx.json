{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "templates/singulinkfx"
    ],
    "globalMetadata": {
      "_appName": "Enx.Systemd",
      "_appTitle": "Enx.Systemd",
      "_appFaviconPath": "images/icon.png",
      "_appLogoPath": "images/icon.png",
      "_appFooter": "<strong>Enx.Systemd</strong>",
      "_copyrightFooter": "The website is available under the terms of the GPL-3.0 license",
      "_enableSearch": true,
      "pdf": false
    }
  }
}